<Window x:Class="PenOrderBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PenOrderBase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="tbtitle" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <StackPanel x:Name="spButtons" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10 5">
            <Button x:Name="btnBack" Content="Назад" Click="btnBack_Click"/>
            <Button x:Name="btnForward" Content="Вперед" Click="btnForward_Click"/>
        </StackPanel>

        <Frame x:Name="frame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
